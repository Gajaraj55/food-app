<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_setting">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pf"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="10dp"
         android:gravity="left"
         android:text="Hacker"
         android:textColor="#000"
         android:textSize="18sp"
         android:textStyle="normal" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:textSize="18sp"
    android:text="hacker@gmail.com"/>

   </LinearLayout>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="10dp"
      android:background="#ffffff"
      android:layout_marginRight="10dp"
      android:orientation="vertical">

    <TextView
        android:id="@+id/delivery_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/arrow"
        android:background="#ffffff"
        android:gravity="fill_vertical"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:text="Delivery Address"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:text="1600 Pennsylvania Avenu,
                                Washington DC,USA"/>
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:background="#ffffff"
      android:orientation="vertical">

  <TextView
      android:id="@+id/payment_mtd"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="fill_vertical"
      android:drawableRight="@drawable/arrow"
      android:background="#ffffff"
      android:textColor="#000"
      android:layout_marginTop="10dp"
      android:textSize="18sp"
      android:drawableLeft="@drawable/payment"
      android:text="Payment Method"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:text="Visa MasterCard
                                                                 xxxx xxxx xxxx 3456"/>
  </LinearLayout>


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
        android:background="#ffffff"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="normal"
        android:textColor="#000"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_notifications_black_24dp"/>

      <Switch
          android:id="@+id/switch1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center" />
  </LinearLayout>


    <TextView
        android:id="@+id/my_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="fill_vertical"
        android:drawableRight="@drawable/arrow"
        android:textColor="#000"
        android:background="#ffffff"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_subject_black_24dp"
        android:text="My Order"/>



    <TextView
        android:id="@+id/termndcnd_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="fill_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/arrow"
        android:background="#ffffff"
        android:textColor="#000"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_library_books_black_24dp"
        android:text="Term and Condition"/>



    <TextView
        android:id="@+id/about_us_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="fill_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/arrow"
        android:background="#ffffff"
        android:textColor="#000"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_info_black_24dp"
        android:text="About Us"/>


  </LinearLayout>
  </ScrollView>
</FrameLayout>