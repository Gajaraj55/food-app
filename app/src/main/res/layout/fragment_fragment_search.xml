<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_search">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/nav_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="2dp"
        android:background="@null"
        app:queryHint="Food name and description"/>
            
            
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
            <TextView
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Pizza"
                android:gravity="center"
                android:background="@drawable/pizza"/>
    <CheckBox
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/favorite_add_button"
        android:layout_marginRight="80dp"
        android:button="@null"
        android:layout_gravity="right"
        android:gravity="center"
        android:visibility="visible" />
</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Pizza"
                    android:gravity="center"
                    android:background="@drawable/biriyani"/>
                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/favorite_add_button"
                    android:layout_marginRight="80dp"
                    android:button="@null"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Pizza"
                    android:gravity="center"
                    android:background="@drawable/grill"/>
                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/favorite_add_button"
                    android:layout_marginRight="80dp"
                    android:button="@null"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Pizza"
                    android:gravity="center"
                    android:background="@drawable/soup"/>
                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/favorite_add_button"
                    android:layout_marginRight="80dp"
                    android:button="@null"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Pizza"
                    android:gravity="center"
                    android:background="@drawable/biriyani"/>
                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/favorite_add_button"
                    android:layout_marginRight="80dp"
                    android:button="@null"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>